function isEven(num) {
    // Check if num is divisible by 2
    if (num % 2 === 0) {
        return true; // Return true if num is even
    } else {
        return false; // Return false if num is odd
    }
}

// Test cases
console.log(isEven(4)); // Expected output: true
console.log(isEven(7)); // Expected output: false
console.log(isEven(-2)); // Expected output: true
